# Development Environment Variables
# Copy this file to .env.dev and fill in your values

# Application
APP_ENV=development
APP_PORT=8090
SPRING_PROFILES_ACTIVE=dev

# Database
DATABASE_URL=jdbc:postgresql://localhost:5432/oppfinder_discovery_dev
DATABASE_USERNAME=oppfinder_dev
DATABASE_PASSWORD=devpass123

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_123
REDIS_SSL=false

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Security
JWT_SECRET=dev-secret-key-for-jwt-token-generation-minimum-256-bits

# External APIs
GITHUB_API_TOKEN=ghp_your_github_token_here
REDDIT_USER_AGENT=OpportunityFinder:v1.0.0 (by /u/your_reddit_username)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Monitoring (optional for dev)
SENTRY_DSN=

# Feature Flags
ENABLE_MOCK_DATA=false
ENABLE_DEBUG_ENDPOINTS=true

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/discovery-dev.log